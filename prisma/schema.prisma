// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  firstname String
  lastname  String
  address   String
  ssnr      Int     @unique
}

model Doctors {
  id        Int     @id @default(autoincrement())
  title     String
  firstname String
  lastname  String
  email     String @unique
  clinic  Clinics @relation(fields: [clinicID], references: [id])
  clinicID Int
  
  openingHours OpeningHours[]
}

model Clinics {
  id        Int     @id @default(autoincrement())
  address   String
  zip       String
  city      String
  doctors   Doctors[]

  openingHours OpeningHours[]
}

model OpeningHours {
  doctorId Int @id
  praticeId Int
  start DateTime
  end DateTime
  weekday Int

  doctor Doctors @relation(fields: [doctorId], references: [id])
  practice Clinics @relation(fields: [praticeId], references: [id])
}